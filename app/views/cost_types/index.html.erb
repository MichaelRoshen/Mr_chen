<%- model_class = CostType -%>
<div class="page-header">
  <h1><%=t '.title', :default =>'支出类型' %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>序号</th>
      <th>类型</th>
      <th>日期</th>
      <th><%=t '.actions', :default =>'操作' %></th>
    </tr>
  </thead>
  <tbody>
    <% @cost_types.each do |cost_type| %>
      <tr>
        <td><%= link_to cost_type.id, cost_type_path(cost_type) %></td>
        <td><%= cost_type.name %></td>
        <td><%=l cost_type.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_cost_type_path(cost_type), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      cost_type_path(cost_type),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_cost_type_path,
            :class => 'btn btn-primary' %>
