<%- model_class = CostBill -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:money) %>:</strong></dt>
  <dd><%= @cost_bill.money %></dd>
  <dt><strong><%= model_class.human_attribute_name(:remarks) %>:</strong></dt>
  <dd><%= @cost_bill.remarks %></dd>
  <dt><strong><%= model_class.human_attribute_name(:billdate) %>:</strong></dt>
  <dd><%= @cost_bill.billdate %></dd>
  <dt><strong><%= model_class.human_attribute_name(:cost_type_id) %>:</strong></dt>
  <dd><%= @cost_bill.cost_type_id %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              cost_bills_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_cost_bill_path(@cost_bill), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              cost_bill_path(@cost_bill),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
